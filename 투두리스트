 // 자바스크립트 내 변수로 
    const $container_todoList = document.getElementById("container_todoList")
    const $darkmode_Btn = document.getElementById("darkmode_Btn")
    const $all_Btn = document.getElementById("all_Btn")
    const $act_Btn = document.getElementById("act_Btn")
    const $com_Btn = document.getElementById("com_Btn")
    const $todo_List = document.getElementById("todo_List")
    const $todo_input = document.getElementById("todo_input")
    const $todo_Add_Btn = document.getElementById("todo_Add_Btn")

    let todos = []
    let currentFilter = ""; // 초기 보여지는 화면


    $darkmode_Btn.addEventListener("click", ()=>{
      $container_todoList.classList.toggle("dark")
    })


    $all_Btn.addEventListener("click", () => renderList("all"))
    $com_Btn.addEventListener("click",() => renderList("completed"))
    $act_Btn.addEventListener("click",() => renderList("active"));
    $todo_Add_Btn.addEventListener("click",Add_Btn_F)
    

    function renderList(filter = "all") {
      $todo_List.innerHTML ="";
      currentFilter = filter
      let renderTodo = todos;
      if(filter === "active") {
        renderTodo = todos.filter(t => !t.completed)
        currentFilter = "active"
      }
      if(filter === "completed"){
      renderTodo = todos.filter(t => t.completed)
      currentFilter = "completed"
      }

      renderTodo.forEach(todo => {
        const li = document.createElement("li");
        li.classList.add("todo-item");
        li.innerHTML = `
          <div>
            <input type="checkbox" ${todo.completed ? "checked" : ""}>
            <span>${todo.text}</span>
          </div>
          <button class="li_btn"><i class="bi bi-trash"></i></button>
        `;

        li.querySelector(".li_btn").addEventListener("click", () => removeTodo(todo.id));
        li.querySelector("input[type=checkbox]").addEventListener("change", () => togglecheck(todo.id));
        $todo_List.appendChild(li);
      })

    }

    // Add 버튼 / enter키 구현
    $todo_input.addEventListener("keydown",(e)=>{
      if (e.key ==="Enter") {  //enter 이벤트 받으면 함수 실행.
        Add_Btn_F(); // => add 실행함수
      }
    })   

    // Add 버튼 => 공백 확인 후 함수 실행
    function Add_Btn_F () {
      let addText = $todo_input.value.trim();
      if(!addText){ 
        $todo_input.value = ""; // 입력 값이 있을시에 true , 없으면 false 을 not으로 전환 
        return alert("입력 값이 비어있습니다."); //함수 탈출
      }  
      //위 조건이 거짓이라면 리스트 생성 후 붙이기
      Add_TodoList(addText);
    }


    
    
    // Add 버튼 실행 함수 => 추가하면 리스트 생성 
    function Add_TodoList (addText) {
      const todo = {
        id: Date.now(),
        text: addText,
        completed : false
      }
      todos.push(todo)
      renderList(currentFilter);
      //입력 값 초기화
      $todo_input.value = "";
      $todo_input.focus();
      }

      function togglecheck (id) {
        const todo = todos.find(t => t.id === id)
        if(todo) todo.completed = !todo.completed;
        renderList(currentFilter);
      }
      

      function removeTodo(id) {
        todos = todos.filter(t=>t.id !==id)
        renderList(currentFilter)
      }