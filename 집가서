<h1>오늘의 할 일 / 메모 !!</h1>
<input type="text" id="todoinput" placeholder="입력해주세용"> 
<button id="todobutton">전송</button>
<ul id="todolist">

</ul>


const $todoinput = document.getElementById("todoinput");
const $todobutton = document.getElementById("todobutton");
const $todolist = document.getElementById("todolist");

let toDo = '';

$todobutton.addEventListener("click", ()=> {
  toDo = $todoinput.value.trim();
  if(toDo === "") return;
  else {
  const todoLi = document.createElement("li");
    todoLi.textContent = toDo;
    $todolist.appendChild(todoLi);
  const todoBox = document.createElement("button");
    todoBox.textContent = "-";
    todoLi.appendChild(todoBox);
    todoBox.style.marginLeft = "10px"
    todoBox.addEventListener("click", () => {
    if(todoLi.style.textDecoration === "line-through") {
      todoLi.style.textDecoration = "none";
      todoLi.style.backgroundColor = "white";
    } else {
      todoLi.style.textDecoration = "line-through";
      todoLi.style.backgroundColor = "green";
    }
  })
  const tododelbutton = document.createElement("button");
    tododelbutton.textContent = "삭제";
    todoLi.appendChild(tododelbutton);
    tododelbutton.style.marginLeft = "5px";
    tododelbutton.addEventListener("click", () => {
    todoLi.remove();
  })
  }
  $todoinput.value = '';
})

